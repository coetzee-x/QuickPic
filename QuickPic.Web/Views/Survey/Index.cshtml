@model QuickPic.Web.Models.SurveyViewModel

<div class="row pt-3">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @using (Html.BeginForm("Submit", "Survey", FormMethod.Post))
        {
            <div class="card">
                <div class="card-body">
                    @for (int i = 0; i < Model.Questions.Count; i++)
                    {
                        @Html.HiddenFor(x => Model.Questions[i].QuestionId)
                        @Html.HiddenFor(x => Model.Questions[i].QuestionText)
                        @Html.DisplayFor(x => Model.Questions[i].QuestionText)
                        @Html.TextBoxFor(x => x.Questions[i].Answer, new { @class = "form-control", @type = "number" })
                        <div><small>@Html.ValidationMessageFor(x => x.Questions[i].Answer, string.Empty, new { @class = "text-danger" })</small></div>
                    }
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">
                        Submit
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>
